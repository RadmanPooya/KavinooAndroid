<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_30sdp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F1F1F1"
        app:cardCornerRadius="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/reg"
                style="@style/iransansregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/iransansbold"
                android:gravity="center"
                android:text="برای دسترسی به تمام بخش های اپلیکیشن        لطفا GPS خود را روشن نمایید"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_14ssp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:layout_constraintBottom_toTopOf="@+id/linear_buttons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linear_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="@dimen/_7sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/cancel_on_location"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:src="@drawable/addratebutton"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/elan_text_view"
                        style="@style/iransansregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iransansbold"
                        android:gravity="center"
                        android:text="انصراف"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/_13ssp"
                        app:layout_constraintBottom_toBottomOf="@+id/cancel_on_location"
                        app:layout_constraintEnd_toEndOf="@+id/cancel_on_location"
                        app:layout_constraintStart_toStartOf="@+id/cancel_on_location"
                        app:layout_constraintTop_toTopOf="@+id/cancel_on_location" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="@dimen/_7sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/power_on_location"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:src="@drawable/addratebutton"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/elan_text_view11"
                        style="@style/iransansregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iransansbold"
                        android:gravity="center"
                        android:text="روشن کردن"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/_13ssp"
                        app:layout_constraintBottom_toBottomOf="@+id/power_on_location"
                        app:layout_constraintEnd_toEndOf="@+id/power_on_location"
                        app:layout_constraintStart_toStartOf="@+id/power_on_location"
                        app:layout_constraintTop_toTopOf="@+id/power_on_location" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:src="@drawable/locationpoweron"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView"
        app:layout_constraintBottom_toTopOf="@id/cardView"/>


</androidx.constraintlayout.widget.ConstraintLayout>
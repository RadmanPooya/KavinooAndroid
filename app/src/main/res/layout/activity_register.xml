<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:layoutDirection="ltr">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:src="@drawable/logolocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_70sdp"
        android:src="@drawable/wellcometokavinoo"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />



    <ImageView
        android:id="@+id/login_cadr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/logincadr"
        android:scaleType="fitXY"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"/>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:cardBackgroundColor="@color/myColorWhite"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@id/login_cadr"
        app:layout_constraintStart_toStartOf="@id/login_cadr"
        app:layout_constraintTop_toTopOf="@+id/login_cadr">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/phone_icon_login"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/phoneiconlogin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="@dimen/_3sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/lineiconlogin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/phone_icon_login"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mobile_phone_sent"
                style="@style/iransansbold"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/_2sdp"
                android:paddingHorizontal="@dimen/_2sdp"
                android:textColor="#83929A"
                android:textSize="@dimen/_15ssp"
                android:text="09120565700"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/login_to_kavinoo"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/buttonlogin"
        app:layout_constraintBottom_toBottomOf="@+id/login_cadr"
        app:layout_constraintEnd_toEndOf="@+id/login_cadr"
        app:layout_constraintStart_toStartOf="@id/login_cadr"
        app:layout_constraintTop_toBottomOf="@+id/login_cadr" />

    <TextView
        android:id="@+id/login_to_kavinoo_text_view"
        style="@style/iransansbold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=" ورود به کاوینو "
        android:textColor="@color/colorBlue"
        android:gravity="center"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintBottom_toBottomOf="@+id/login_to_kavinoo"
        app:layout_constraintEnd_toEndOf="@+id/login_to_kavinoo"
        app:layout_constraintStart_toStartOf="@+id/login_to_kavinoo"
        app:layout_constraintTop_toTopOf="@+id/login_to_kavinoo" />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit_login"
        style="@style/SpinKitView.Large.ThreeBounce"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_gravity="center"
        android:visibility="invisible"
        app:SpinKit_Color="@color/colorBlue"
        app:layout_constraintBottom_toBottomOf="@+id/login_to_kavinoo"
        app:layout_constraintEnd_toEndOf="@+id/login_to_kavinoo"
        app:layout_constraintStart_toStartOf="@+id/login_to_kavinoo"
        app:layout_constraintTop_toTopOf="@+id/login_to_kavinoo"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/edit_phone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        app:cardBackgroundColor="@color/colorBlue"
        app:cardCornerRadius="@dimen/_7sdp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView5"
        app:layout_constraintEnd_toEndOf="@+id/cardView5"
        app:layout_constraintTop_toTopOf="@+id/cardView5">

        <TextView
            style="@style/iransansregular"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:gravity="center"
            android:text="  تصحیح شماره  "
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_14ssp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="0dp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardBackgroundColor="#f4f7f9"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@+id/login_cadr"
        app:layout_constraintStart_toStartOf="@+id/login_cadr"
        app:layout_constraintTop_toBottomOf="@+id/cardView5" />

    <TextView
        android:id="@+id/textView"
        style="@style/iransansbold"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="0dp"
        android:layout_height="@dimen/_22sdp"
        android:gravity="center_vertical"
        android:text=" کد تایید ارسال شده را وارد نمایید"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toEndOf="@+id/cardView4"
        app:layout_constraintStart_toStartOf="@+id/cardView4"
        app:layout_constraintTop_toTopOf="@+id/cardView4" />

    <androidx.cardview.widget.CardView
        android:id="@+id/time"
        android:layout_width="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:cardElevation="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_height="@dimen/_22sdp"
        app:cardBackgroundColor="@color/myColorWhite"
        app:cardCornerRadius="@dimen/_7sdp"
        app:layout_constraintStart_toStartOf="@+id/cardView4"
        app:layout_constraintTop_toTopOf="@+id/cardView4">

        <TextView
            android:id="@+id/timer"
            style="@style/iransansbold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:gravity="center"
            android:text="1:30"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/_14ssp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/cardView4"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:src="@drawable/inputnumberregister"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/reg_number1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:background="@null"
                
                android:gravity="center"
                android:hint=""
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorBlue"
                android:textColorHint="#BEC5C8"
                android:textSize="@dimen/_14ssp"
                style="@style/iransansbold"
                android:textCursorDrawable="@drawable/color_cursor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:src="@drawable/inputnumberregister"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/reg_number2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:background="@null"
                
                android:gravity="center"
                android:hint=""
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorBlue"
                android:textColorHint="#BEC5C8"
                android:textSize="@dimen/_14ssp"
                style="@style/iransansbold"
                android:textCursorDrawable="@drawable/color_cursor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:src="@drawable/inputnumberregister"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/reg_number3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:background="@null"
                
                android:gravity="center"
                android:hint=""
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorBlue"
                android:textColorHint="#BEC5C8"
                android:textSize="@dimen/_14ssp"
                style="@style/iransansbold"
                android:textCursorDrawable="@drawable/color_cursor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:src="@drawable/inputnumberregister"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/reg_number4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:background="@null"
                android:gravity="center"
                android:hint=""
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorBlue"
                android:textColorHint="#BEC5C8"
                android:textSize="@dimen/_14ssp"
                style="@style/iransansbold"
                android:textCursorDrawable="@drawable/color_cursor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/send_again"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_26sdp"
        app:cardBackgroundColor="@color/colorBlue"
        app:cardCornerRadius="@dimen/_7sdp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="@+id/cardView4"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/send_again_text_view"
            style="@style/iransansregular"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:gravity="center"
            android:text="ارسال مجدد"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_14ssp" />
        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit_send_again"
            style="@style/SpinKitView.Large.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            app:SpinKit_Color="#ffffff" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:scaleType="fitXY"
        android:src="@drawable/loginback"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
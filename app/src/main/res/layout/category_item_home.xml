<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_5sdp"
    android:layoutDirection="ltr">

    <FrameLayout
        android:id="@+id/category_item_home_frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@id/category_item_home_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/category_item_home_image_view"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_35sdp"
            android:scaleType="fitXY" />

    </FrameLayout>

    <TextView
        android:gravity="center"
        android:id="@+id/category_item_home_text_view"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:text=""
        android:ellipsize="end"
        style="@style/iransansbold"
        android:textSize="@dimen/_12ssp"
        android:textColor="#033550"
        app:layout_constraintTop_toBottomOf="@id/category_item_home_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
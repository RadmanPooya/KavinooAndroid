<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SplashScreen"
    android:layoutDirection="ltr">

    <ImageView
        android:id="@+id/bottom_splash_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_290sdp"
        android:scaleType="fitXY"
        android:src="@drawable/bottomsplash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logo_location_image_view"
        android:layout_width="@dimen/_110sdp"

        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/logolocation"
        app:layout_constraintBottom_toTopOf="@+id/bottom_splash_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/tower_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:src="@drawable/towers"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_splash_image_view"
        app:layout_constraintStart_toStartOf="@+id/bottom_splash_image_view"
        app:layout_constraintEnd_toEndOf="@id/bottom_splash_image_view"/>

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/kavinoowhite"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_splash_image_view"
        app:layout_constraintEnd_toEndOf="@+id/bottom_splash_image_view"
        app:layout_constraintStart_toStartOf="@+id/bottom_splash_image_view"
        app:layout_constraintTop_toTopOf="@+id/bottom_splash_image_view" />
    <!--<ImageView
        android:id="@+id/splash_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:src="@drawable/giflogo"
        app:layout_constraintEnd_toEndOf="@id/bottom_splash_image_view"
        app:layout_constraintStart_toStartOf="@id/bottom_splash_image_view"
        app:layout_constraintTop_toTopOf="@id/bottom_splash_image_view"
        app:layout_constraintBottom_toBottomOf="@id/bottom_splash_image_view"/>-->



</androidx.constraintlayout.widget.ConstraintLayout>
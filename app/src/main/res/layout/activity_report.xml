<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReportActivity"
    android:layoutDirection="ltr">

    <androidx.cardview.widget.CardView
        android:id="@+id/menu_toolbar"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_17sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/myColorWhite"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="@dimen/_11sdp">

        <ImageView
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_27sdp"
            android:src="@drawable/menu"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>



    <ImageView
        android:id="@+id/kavinoo_logo_blue_toolbar"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_33sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:src="@drawable/kavinoologoblue"
        app:layout_constraintEnd_toStartOf="@+id/menu_toolbar"
        app:layout_constraintStart_toEndOf="@+id/back_toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/back_toolbar"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_11sdp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/myColorWhite"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="@dimen/_11sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/backtoolbar"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card22"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/_48sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        app:cardBackgroundColor="#F7F9FB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kavinoo_logo_blue_toolbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/_30sdp"
        app:cardBackgroundColor="@color/myColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kavinoo_logo_blue_toolbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="0dp"
        android:layout_margin="@dimen/_3sdp"
        app:cardBackgroundColor="#F7F9FB"
        app:layout_constraintBottom_toBottomOf="@+id/card1"
        app:layout_constraintEnd_toEndOf="@+id/card1"
        app:layout_constraintStart_toStartOf="@+id/card1"
        app:layout_constraintTop_toTopOf="@+id/card1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_activity"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardBackgroundColor="#2AA8E1"
        app:layout_constraintBottom_toBottomOf="@+id/card2"
        app:layout_constraintEnd_toEndOf="@+id/card2"
        app:layout_constraintTop_toTopOf="@+id/card2"
        android:layout_margin="@dimen/_3sdp"/>

    <TextView
        android:id="@+id/mtn_activity"
        style="@style/iransansbold"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:text="امتیازات دریافتی"
        android:textColor="@color/myColorWhite"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@+id/card_activity"
        app:layout_constraintStart_toStartOf="@id/card_activity"
        app:layout_constraintTop_toTopOf="@+id/card_activity"
        app:layout_constraintEnd_toEndOf="@id/card_activity"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_award"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_4sdp"
        app:cardBackgroundColor="#2AA8E1"
        android:visibility="invisible"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/card2"
        app:layout_constraintStart_toStartOf="@id/card2"
        app:layout_constraintTop_toTopOf="@+id/card2"/>

    <TextView
        android:id="@+id/mtn_award"
        style="@style/iransansbold"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:text="جوایز دریافتی"
        android:textColor="#D9D9D9"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@+id/card_award"
        app:layout_constraintStart_toStartOf="@id/card_award"
        app:layout_constraintTop_toTopOf="@+id/card_award"
        app:layout_constraintEnd_toEndOf="@id/card_award"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_activity_score_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:clipChildren="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="@id/card22"
        app:layout_constraintStart_toStartOf="@id/card22"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintBottom_toBottomOf="@id/card22"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_award_voucher_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:clipChildren="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/card22"
        app:layout_constraintEnd_toEndOf="@id/card22"
        app:layout_constraintStart_toStartOf="@id/card22"
        app:layout_constraintTop_toBottomOf="@id/card1" />

    <ImageView
        android:id="@+id/empty_image_report"
        android:layout_width="0dp"
        android:layout_height="@dimen/_220sdp"
        android:visibility="invisible"
        android:src="@drawable/activityscoreempty"
        app:layout_constraintBottom_toBottomOf="@id/card22"
        app:layout_constraintEnd_toEndOf="@id/card22"
        app:layout_constraintStart_toStartOf="@id/card22"
        app:layout_constraintTop_toBottomOf="@id/card1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
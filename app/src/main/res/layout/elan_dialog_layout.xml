<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_margin="@dimen/_15sdp"
        app:cardBackgroundColor="#F1F1F1"

        app:cardCornerRadius="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/reg"
                style="@style/iransansregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/iransansbold"
                android:gravity="center"
                android:text="با اعلام حضور خود و پس از بررسی فاصله شما در صورتی که در نزدیکی محل مورد نظر باشید طرح ها و جوایز تشویقی مربوط به آن مکان به شما تقدیم می شود."
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_14ssp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:layout_constraintBottom_toTopOf="@+id/elan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/elan"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/addratebutton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit_elan"
                style="@style/SpinKitView.Large.ThreeBounce"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:SpinKit_Color="@color/colorBlue"
                app:layout_constraintBottom_toBottomOf="@+id/elan"
                app:layout_constraintEnd_toEndOf="@+id/elan"
                app:layout_constraintStart_toStartOf="@+id/elan"
                app:layout_constraintTop_toTopOf="@+id/elan"/>

            <TextView
                android:id="@+id/elan_text_view"
                style="@style/iransansregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iransansbold"
                android:gravity="center"
                android:text="اعلام حضور"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintBottom_toBottomOf="@+id/elan"
                app:layout_constraintEnd_toEndOf="@+id/elan"
                app:layout_constraintStart_toStartOf="@+id/elan"
                app:layout_constraintTop_toTopOf="@+id/elan" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_21sdp"
        app:cardBackgroundColor="#367ab9"
        app:cardCornerRadius="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView"
        app:layout_constraintBottom_toTopOf="@id/cardView">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="   حضور   "
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_14ssp"
            style="@style/iransansregular"/>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
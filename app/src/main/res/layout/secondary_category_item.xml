<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_main_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/category_item_main_image_view"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_35sdp"
            android:scaleType="fitXY"
            android:src="@android:color/transparent"
            android:layout_marginEnd="@dimen/_18sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:gravity="center"
            android:id="@+id/category_item_main_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="فست فود و مواد غذایی"
            android:ellipsize="end"
            style="@style/iransansbold"
            android:textSize="@dimen/_14ssp"
            android:textColor="#033550"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_35sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#E5E5E6"
            app:layout_constraintTop_toBottomOf="@id/category_item_main_image_view"
            android:layout_marginTop="@dimen/_9sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr">


    <androidx.cardview.widget.CardView
        android:id="@+id/award_m_cadr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/activity_score_image"
        android:layout_width="@dimen/_37sdp"
        android:layout_height="@dimen/_37sdp"
        android:src="@drawable/scoreimage"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/award_m_cadr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/award_m_cadr" />

    <TextView
        android:id="@+id/activity_score_title"
        style="@style/iransansbold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:gravity="start"
        android:maxLines="3"
        android:text="اعلام حضور"
        android:textColor="#929292"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_score_image"
        app:layout_constraintStart_toEndOf="@+id/award_voucher_card"
        app:layout_constraintTop_toTopOf="@+id/award_m_cadr" />


    <androidx.cardview.widget.CardView
        android:id="@+id/time_card"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_27sdp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="#2AA8E1"
        android:layout_marginStart="@dimen/_8sdp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/award_m_cadr"
        app:layout_constraintStart_toStartOf="@+id/award_m_cadr"
        app:layout_constraintTop_toTopOf="@+id/award_m_cadr">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/date_time_activity_score"
                style="@style/iransansbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="1400/08/25 , 14:55"
                android:textColor="@color/myColorWhite"
                android:textSize="@dimen/_9ssp"
                android:maxLines="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/award_voucher_card"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_19sdp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="#F4FBFD"
        android:layout_marginStart="@dimen/_8sdp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/award_m_cadr"
        app:layout_constraintTop_toTopOf="@+id/award_m_cadr">
        <TextView
            android:id="@+id/activity_score_value"
            style="@style/iransansbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="125 امتیاز"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/_10ssp"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/activity_score_image"
            app:layout_constraintStart_toEndOf="@+id/progress_award_voucher"
            app:layout_constraintTop_toTopOf="@+id/award_m_cadr" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>